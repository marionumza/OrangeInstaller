#encoding: utf-8
from OpenOrange import *

ParentInvoiceListReportWindow = SuperClass("InvoiceListReportWindow","ReportWindow",__file__)
class InvoiceListReportWindow(ParentInvoiceListReportWindow):

    def filterPasteWindow(self, fieldname):
        if fieldname == "PayTerm":
            from PayTerm import PayTerm
            return "({OperationType} IS NULL OR {OperationType} IN (i|%i|, i|%i|))" % (PayTerm.ALL_OPERATIONS,PayTerm.SALES)    
        return ParentInvoiceListReportWindow.filterPasteWindow(self,fieldname)

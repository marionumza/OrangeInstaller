#encoding: utf-8
from OpenOrange import *
from GlobalTools import *

ParentLetterStateWindow = SuperClass("LetterStateWindow","MasterWindow",__file__)
class LetterStateWindow(ParentLetterStateWindow):

    def afterEditRow(self, fieldname, rowfieldname, rownr):
        ParentLetterStateWindow.afterEditRow(self, fieldname, rowfieldname, rownr)
        record = self.getRecord()
        if (fieldname == "LetterStateRows"):
            row= record.LetterStateRows[rownr]
            if (rowfieldname == "Bank"):
               row.pasteBank()
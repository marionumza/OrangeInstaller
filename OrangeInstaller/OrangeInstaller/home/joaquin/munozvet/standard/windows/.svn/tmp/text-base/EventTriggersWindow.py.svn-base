from OpenOrange import *

ParentEventTriggersWindow = SuperClass('EventTriggersWindow', "SettingWindow", __file__)
class EventTriggersWindow(ParentEventTriggersWindow):

    def fillPasteWindow(self, pastewindowname, fieldname):
        if pastewindowname == "XPasteWindow":
            if fieldname == "RecordName":
                lista = []
                wininfo = getWindowsInfo()
                for wInfo in wininfo.values():
                    z = NewRecord("X")
                    z.Code = wInfo["RecordName"]
                    z.Name = wInfo["Title"]
                    lista.append(z)
                lista.sort(key = lambda x: x.Name)
                return lista


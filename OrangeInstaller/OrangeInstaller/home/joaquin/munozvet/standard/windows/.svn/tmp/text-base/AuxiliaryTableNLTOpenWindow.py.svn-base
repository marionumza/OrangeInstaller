from OpenOrange import *

ParentAuxiliaryTableNLTOpenWindow = SuperClass('AuxiliaryTableNLTOpenWindow', "MasterWindow", __file__)
class AuxiliaryTableNLTOpenWindow(ParentAuxiliaryTableNLTOpenWindow):

    def afterEdit(self,fieldname):
        record = self.getRecord()
        if fieldname in ("BaseRate","CurrencyRate"):
            record.sumUp()
          
    def afterEditRow(self, fieldname, rowfieldname, rownr):
        record = self.getRecord()
        if (fieldname == "AuxiliaryTableNLTOpenRows"):
            AuxTabNLTRow = record.AuxiliaryTableNLTOpenRows[rownr]
            if (rowfieldname == "AmountBase1"):
                AuxTabNLTRow.sumUpBase1(record)
            elif (rowfieldname == "AmountBase2"):
                AuxTabNLTRow.sumUpBase2(record)
            record.sumUp()
    
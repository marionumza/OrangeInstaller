from OpenOrange import *

ParentClosedCasesEvolutionReportWindow = SuperClass("ClosedCasesEvolutionReportWindow","Window",__file__)
class ClosedCasesEvolutionReportWindow(ParentClosedCasesEvolutionReportWindow):

    def afterEdit(self, fieldname):
        ParentClosedCasesEvolutionReportWindow.afterEdit(self, fieldname)
        if fieldname == "LastXDays" or fieldname == "XDays":
            if self.getRecord().LastXDays:
                self.getRecord().Mode=0
                self.getRecord().FromDate=addDays(today(),- self.getRecord().XDays)
                self.getRecord().ToDate=today()
        else:  
            if self.getRecord().LastXDays==True and ( fieldname == "Mode" or fieldname == "FromDate" or fieldname == "ToDate" ):
                self.getRecord().LastXDays=False            

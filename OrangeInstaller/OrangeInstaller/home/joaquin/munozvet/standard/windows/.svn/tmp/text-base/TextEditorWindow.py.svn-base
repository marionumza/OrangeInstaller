#encoding: utf-8
from OpenOrange import *

ParentTextEditorWindow = SuperClass('TextEditorWindow', "Window", __file__)
class TextEditorWindow(ParentTextEditorWindow): 

    @classmethod
    def createEditor(objclass):
        from TextEditor import TextEditor
        te = TextEditor()
        w = objclass()
        w.setRecord(te)
        return w
        
    def buttonClicked(self, buttonname):
        if buttonname == "OK":
            if not self.onOk():
                self.close()
        elif buttonname == "CANCEL":
            if not self.onCancel():
                self.close()

    def onOk(self):
        return True
    
    def onCancel(self):
        return True
        
    def getText(self):
        return self.getRecord().Text
    
    def setText(self, text):
        self.getRecord().Text = text

            
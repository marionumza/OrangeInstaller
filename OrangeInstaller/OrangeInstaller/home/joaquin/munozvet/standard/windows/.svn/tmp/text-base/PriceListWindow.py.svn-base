#encoding: utf-8
from OpenOrange import *

ParentPriceListWindow = SuperClass("PriceListWindow","MasterWindow",__file__)
class PriceListWindow(ParentPriceListWindow):
    
    def getPasteWindowNameRow(self,fieldname,rowfieldname,rownr):
        record = self.getRecord()
        row = record.PriceListRows[rownr]
        if (fieldname == "PriceListRows"):
            if(rowfieldname == "ItemGroup"):
                if (row.Type == 0):
                    return "ItemGroupPasteWindow"
                else:
                    return "ItemPasteWindow"
        return ParentPriceListWindow.getPasteWindowNameRow(self,fieldname,rowfieldname,rownr)
        
    def loadPrices(self):
        record = self.getRecord().getPriceLoadRecord()
        if record:
            record.openInWindow()
        else:
            message(record)
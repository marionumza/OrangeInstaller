#encoding: utf-8
from OpenOrange import *

ParentWindow = SuperClass("ReportWindow","ReportWindow",__file__)
class ItemHistoryReportWindow(ParentWindow):

    def afterEdit(self, fieldname):
        rec = self.getRecord()
        if fieldname == "ShowReserve":
           rec.ShowSalesOrder = rec.ShowReserve
        elif fieldname == "ShowSalesOrder":
            rec.ShowReserve = rec.ShowSalesOrder
        else:
            ParentWindow.afterEdit(self, fieldname)
from OpenOrange import *
from GlobalTools import *

ParentSystemReminderWindow = SuperClass("SystemReminderWindow","MasterWindow",__file__)
class SystemReminderWindow(ParentSystemReminderWindow):
    DefaultAfterEditRow = True
    DefaultAfterEdit = True

    def showMyContacts(self):
        record = self.getRecord()
        from MyContactsBirthday import MyContactsBirthday
        myc = MyContactsBirthday()
        myc.defaults()
        myc.getRecord().User = record.Code
        myc.open(True)



#encoding: utf-8
from OpenOrange import *

ParentQuoteListReportWindow = SuperClass("QuoteListReportWindow","ReportWindow",__file__)
class QuoteListReportWindow(ParentQuoteListReportWindow):

    def filterPasteWindow(self, fieldname):
        if fieldname == "PayTerm":
            from PayTerm import PayTerm
            return "({OperationType} IS NULL OR {OperationType} IN (i|%i|, i|%i|))" % (PayTerm.ALL_OPERATIONS,PayTerm.SALES)    
        return ParentQuoteListReportWindow.filterPasteWindow(self,fieldname)

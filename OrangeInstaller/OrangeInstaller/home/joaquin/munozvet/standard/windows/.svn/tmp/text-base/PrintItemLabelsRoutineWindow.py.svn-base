#encoding: utf-8
from OpenOrange import *
from RoutineWindow import RoutineWindow

ParentPrintItemLabelsRoutineWindow = SuperClass("PrintItemLabelsRoutineWindow","RoutineWindow",__file__)
class PrintItemLabelsRoutineWindow(ParentPrintItemLabelsRoutineWindow):

    def filterPasteWindow(self, fieldname):
        specs = self.getRecord()
        if (fieldname == "SerialNr"):
            return "ArtCode = s|%s|" % specs.ArtCode

    def afterEdit(self, fname):
        record = self.getRecord()
        if fname in ("ArtCode","SerialNr"):
          record.BarCode = record.ArtCode.rjust(6,"0") + record.SerialNr.ljust(7,"0")